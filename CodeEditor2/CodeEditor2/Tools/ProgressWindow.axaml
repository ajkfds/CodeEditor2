<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		Width="800"
		Height="200"
        x:Class="CodeEditor2.Tools.ProgressWindow"
		Background="Transparent"
		TransparencyBackgroundFallback="Transparent"
		TransparencyLevelHint="Transparent"
		SystemDecorations="None"
		WindowStartupLocation="CenterOwner"
        Title="ProgressWindow">
	<Border 
		CornerRadius="10" 
		VerticalAlignment="Center" 
		Padding="10" 
		Background="#606060"
		BorderBrush="#404040"
		BorderThickness="2"
		>
		<StackPanel>
			<TextBlock Name="TitleText" Text="Title" HorizontalAlignment="Center" FontWeight="10" FontSize="16"/>
			<TextBlock Name="MessageText" FontSize="12">Parsing...</TextBlock>
			<ProgressBar Name="ProgressBar0"
				Margin="0 10" Height="20" FontSize="10"
						  Minimum="0" Maximum="100" Value="0"
						  ShowProgressText="True"/>
		</StackPanel>
	</Border>
</Window>
